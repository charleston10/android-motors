<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="makes"
                type="br.com.charleston.domain.model.MakeModel[]"/>

        <variable
                name="vehicles"
                type="br.com.charleston.domain.model.VehicleModel[]"/>

        <variable
                name="avatar"
                type="br.com.charleston.domain.model.AvatarModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
                android:background="@color/white"
                android:elevation="4dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <ImageView
                        app:bindCircleUrl="@{avatar.url}"
                        android:layout_width="50dp" android:layout_height="50dp"
                        tools:srcCompat="@tools:sample/avatars"
                        android:layout_marginTop="8dp" android:layout_marginStart="8dp"/>

                <TextView
                        android:layout_gravity="center_vertical"
                        app:bindWelcome="@{avatar.name}"
                        tools:text="Bem-Vindo JosÃ© Alves"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" android:layout_marginStart="8dp"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


        <androidx.recyclerview.widget.RecyclerView
                tools:itemCount="1"
                app:bindListMake="@{makes}"
                android:orientation="horizontal"
                tools:listitem="@layout/item_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" android:id="@+id/recyclerView"
                app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_vehicles"
                app:bindListVehicle="@{vehicles}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:listitem="@layout/item_vehicle"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginTop="8dp"/>

        <TextView
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Top Cars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/recyclerView"/>
        <TextView
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/toolbar"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>