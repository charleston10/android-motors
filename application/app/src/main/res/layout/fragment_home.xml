<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="makes"
            type="br.com.charleston.domain.model.MakeModel[]"/>

        <variable
            name="vehicles"
            type="br.com.charleston.domain.model.VehicleModel[]"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include_container_search"
            layout="@layout/include_container_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <include
            android:id="@+id/include_container_make"
            layout="@layout/include_container_make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/include_container_search"
            android:layout_marginTop="8dp"
            bind:makes="@{makes}"/>

        <include
            android:id="@+id/include_container_vehicle"
            layout="@layout/include_container_vehicle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/include_container_make"
            android:layout_marginTop="8dp"
            bind:vehicles="@{vehicles}"/>
    </RelativeLayout>
</layout>