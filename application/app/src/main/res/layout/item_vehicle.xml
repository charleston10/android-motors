<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="8dp"
                android:layout_height="120dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="64dp" android:layout_marginEnd="16dp" android:id="@+id/view"
                android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>

        <ImageView
                android:translationZ="@dimen/cardview_default_elevation"
                android:layout_width="150dp"
                android:layout_height="90dp"
                tools:srcCompat="@drawable/car_example"
                android:id="@+id/imageView" app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>

        <TextView
                android:elevation="2dp"
                android:textSize="18sp"
                tools:text="Honda - City"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imageView" app:layout_constraintTop_toTopOf="@+id/imageView"
                android:id="@+id/textView2" android:layout_marginStart="8dp"/>

        <TextView
                android:background="@null"
                android:elevation="2dp"
                android:textColor="@color/white"
                tools:text="2.0 EXL 4X4 16V GASOLINA 4P AUTOMÁTICO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/view"
                android:layout_marginTop="8dp" android:layout_marginEnd="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>